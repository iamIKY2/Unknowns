/*
 * @Designed: By UIPack Team
 * @Date: 2018-12-08 22:59:38
 */
{
    "namespace": "add_external_server",
    "play_panel": {
        "type": "panel",
        "size": [
            "50%",
            30
        ],
        "controls": [
            {
                "play@add_external_server.play_button": {}
            },
            {
                "play_disabled@add_external_server.play_disabled_button": {
                    "ignored": "$edit_mode",
                    "layer": 5
                }
            },
            {
                "remove@add_external_server.remove_button": {}
            }
        ]
    },
    "remove_button@common_buttons.light_text_button": {
        "$pressed_button_name": "button.remove_button",
        "$button_text": "addExternalServerScreen.removeButtonLabel",
        "$hover_button_texture": "textures/ui/button_red",
        "$pressed_button_texture": "textures/ui/button_red_pressed",
        "visible": "($edit_mode)"
    },
    "save_panel": {
        "type": "panel",
        "size": [
            "50%",
            30
        ],
        "controls": [
            {
                "save@add_external_server.save_button": {}
            },
            {
                "save_disabled@add_external_server.save_disabled_button": {
                    "layer": 1
                }
            }
        ]
    },
    "gamepad_helpers": {
        "type": "stack_panel",
        "orientation": "horizontal",
        "offset": [
            0,
            "-5px"
        ],
        "size": [
            "100%c",
            16
        ],
        "layer": "$gamepad_helper_layer",
        "$gamepad_helper_layer|default": 0,
        "anchor_from": "bottom_middle",
        "anchor_to": "bottom_middle",
        "controls": [
            {
                "gamepad_helper_a@common.gamepad_helper_a": {}
            },
            {
                "control": {
                    "type": "panel",
                    "size": [
                        10,
                        0
                    ]
                }
            },
            {
                "gamepad_helper_b@common.gamepad_helper_b": {}
            }
        ]
    },
    "selector_area": {
        "type": "panel",
        "size": [
            "100% - 16px",
            "100% - 16px"
        ],
        "anchor_from": "bottom_middle",
        "anchor_to": "bottom_middle",
        "offset": [
            0,
            "-8px"
        ],
        "$menu_cancel_button_id": "button.menu_exit",
        "$modal_binding_name": "#selector_area_focused",
        "layer": 2,
        "controls": [
            {
                "scrolling_panel@common.scrolling_panel": {
                    "$scrolling_content": "add_external_server.scrollable_selector_area_content",
                    "$show_background": false,
                    "$scroll_size": [
                        "5px",
                        "100% - 4px"
                    ],
                    "$scroll_bar_left_padding_size": [
                        0,
                        0
                    ]
                }
            }
        ]
    },
    "scrollable_selector_area_content": {
        "type": "panel",
        "offset": [
            "2px",
            "2px"
        ],
        "size": [
            "100% - 4px",
            "100%c + 4px"
        ],
        "controls": [
            {
                "selector_panel@add_external_server.selector_panel": {}
            }
        ]
    },
    "selector_panel": {
        "type": "stack_panel",
        "controls": [
            {
                "top_spacer": {
                    "type": "panel",
                    "size": [
                        0,
                        -2
                    ]
                }
            },
            {
                "server_snapshot_image": {
                    "ignored": "(not $is_pregame)",
                    "type": "panel",
                    "size": [
                        "100%",
                        "100%c + 2px"
                    ],
                    "controls": [
                        {
                            "default_indent@common.default_indent": {
                                "size": [
                                    "100% - 2px",
                                    "100%c + 2px"
                                ],
                                "anchor_from": "top_middle",
                                "anchor_to": "top_middle",
                                "controls": [
                                    {
                                        "thumbnail": {
                                            "type": "image",
                                            "force_texture_reload": true,
                                            "size": [
                                                "100%",
                                                "56.25%x"
                                            ],
                                            "layer": 2,
                                            "anchor_from": "center",
                                            "anchor_to": "center",
                                            "controls": [
                                                {
                                                    "border": {
                                                        "type": "image",
                                                        "size": [
                                                            "100% + 2px",
                                                            "100% + 2px"
                                                        ],
                                                        "texture": "textures/ui/BannersTransparent",
                                                        "anchor_from": "center",
                                                        "anchor_to": "center"
                                                    }
                                                },
                                                {
                                                    "image": {
                                                        "type": "image",
                                                        "layer": 2,
                                                        "size": [
                                                            "100%",
                                                            "100%"
                                                        ],
                                                        "texture": "textures/ui/CreateNewServer",
                                                        "anchor_from": "center",
                                                        "anchor_to": "center"
                                                    }
                                                },
                                                {
                                                    "Frame": {
                                                        "type": "image",
                                                        "layer": 3,
                                                        "size": [
                                                            "100% + 2px",
                                                            "100% + 2px"
                                                        ],
                                                        "texture": "textures/ui/Frame",
                                                        "anchor_from": "center",
                                                        "anchor_to": "center"
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            },
            {
                "play&save_panel": {
                    "type": "stack_panel",
                    "size": [
                        "100%",
                        60
                    ],
                    "orientation": "vertical",
                    "controls": [
                        {
                            "play_panel@add_external_server.play_panel": {
                                "size": [
                                    "100%",
                                    "50%"
                                ]
                            }
                        },
                        {
                            "middle_spacer": {
                                "type": "panel",
                                "size": [
                                    0,
                                    -1
                                ]
                            }
                        },
                        {
                            "save_panel@add_external_server.save_panel": {
                                "size": [
                                    "100%",
                                    "50%"
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "content_area": {
        "type": "panel",
        "size": [
            "100% - 16px",
            "100% - 31px"
        ],
        "anchor_from": "bottom_middle",
        "anchor_to": "bottom_middle",
        "offset": [
            0,
            "-8px"
        ],
        "$menu_cancel_button_id": "button.back_to_selector_area",
        "$modal_binding_name": "#content_area_focused",
        "layer": 1,
        "controls": [
            {
                "scrolling_panel@common.scrolling_panel": {
                    "$scrolling_content": "add_external_server.scrollable_content_area_content",
                    "$show_background": false,
                    "$scroll_size": [
                        "5px",
                        "100% - 4px"
                    ],
                    "$scroll_bar_left_padding_size": [
                        0,
                        0
                    ]
                }
            }
        ]
    },
    "scrollable_content_area_content": {
        "type": "panel",
        "offset": [
            "2px",
            "2px"
        ],
        "size": [
            "100% - 4px",
            "100%c + 4px"
        ],
        "controls": [
            {
                "content_panel@add_external_server.content_panel": {}
            }
        ]
    },
    "add_external_server_screen_content": {
        "type": "panel",
        "controls": [
        {
        "back@ui.bgback": {}
      },
            {
                "container": {
                    "type": "stack_panel",
                    "size": [
                        "100%",
                        "100%"
                    ],
                    "controls": [
                        {
                            "content_panel@ui.uikit_screen": {
                                "$include_menu_screen": true,
                                "$icon_texture": "textures/ui/top_bar/servers",
                                "$title_text": "menu.serverGenericName",
                                "$left_screen": "add_external_server.selector_area",
                                "$right_side_title": "#title_text",
                                "$binding_right_side_title": "#title_text",
                                "$right_screen": "add_external_server.content_area"
                            }
                        },
                        {
                            "gamepad_panel": {
                                "type": "panel",
                                "size": [
                                    "100%",
                                    "100%c"
                                ],
                                "controls": [
                                    {
                                        "gamepad_helpers@settings_common.gamepad_helpers": {}
                                    }
                                ],
                                "bindings": [
                                    {
                                        "binding_name": "#gamepad_helper_visible",
                                        "binding_name_override": "#visible"
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}